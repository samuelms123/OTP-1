<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="application.controller.PostCellController">
    <VBox spacing="5" styleClass="nav-button" stylesheets="@../css/style.css" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <Label fx:id="authorLabel" style="-fx-font-weight: bold;" />
        <Label fx:id="contentLabel" wrapText="true" />
        <HBox spacing="10">
            <Button fx:id="likeButton" text="Like" />
            <Button fx:id="commentButton" onAction="#addComment" text="Comment" />
        </HBox>
        <TextField fx:id="commentField" prefWidth="200.0" promptText="Write a comment..." />
      <ListView fx:id="postComments" prefHeight="0.0" prefWidth="200.0" stylesheets="@../css/style.css" VBox.vgrow="ALWAYS" />
    </VBox>
</AnchorPane>
