<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="application.controller.PostCellController">
    <VBox spacing="15.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
        <Label fx:id="authorLabel" style="-fx-font-weight: bold;">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </Label>
        <Label fx:id="contentLabel" wrapText="true">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </Label>
        <HBox spacing="10">
            <Button fx:id="likeButton" styleClass="purple-button" stylesheets="@../css/style.css" text="Like" />
            <Button fx:id="commentButton" onAction="#addComment" styleClass="purple-button" stylesheets="@../css/style.css" text="Comment" />
        </HBox>
        <TextField fx:id="commentField" prefWidth="200.0" promptText="Write a comment..." style="-fx-background-radius: 25;" stylesheets="@../css/style.css" />
      <ListView fx:id="postComments" prefHeight="0.0" prefWidth="200.0" style="-fx-background-radius: 1;" VBox.vgrow="ALWAYS" />
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
    </VBox>
</AnchorPane>
